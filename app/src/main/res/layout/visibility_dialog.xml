<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/midGray"
        android:elevation="10dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/visibility_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="VISIBILITY"/>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/ok_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="16dp"
            android:text="OK"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/cancel_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="16dp"
            android:clickable="true"
            android:layout_toLeftOf="@id/ok_action_button"
            android:textStyle="bold"
            android:text="CANCEL"/>


    </RelativeLayout>


</LinearLayout>