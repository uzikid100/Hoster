<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_for_singleView"
        android:layout_margin="16dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/add_friends_icon" />

    <TextView
        android:id="@+id/feature_description"
        android:layout_width="180dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity=""
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/imageView_for_singleView"
        android:layout_alignTop="@+id/imageView_for_singleView"
        android:layout_alignBottom="@+id/imageView_for_singleView" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/feature_description"
        android:layout_toRightOf="@+id/feature_description"
        android:layout_alignBottom="@+id/feature_description" />

</RelativeLayout>